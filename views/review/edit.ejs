      <label for="reviewBody" class="form-label">Write a Review</label>
      <textarea name="text" id="reviewBody" class="form-control" rows="3" required><%=text %></textarea>
    </div>
  
    <div class="mb-3">
      <label for="reviewRating" class="form-label">Rating (1â€“5)</label>
      <input type="number" name="rating" id="reviewRating" class="form-control" min="1" max="5" required value=<%=rating %>>
